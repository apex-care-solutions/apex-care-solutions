# Dockerfile.server

FROM node:18

# Set working directory
WORKDIR /app

# Install dependencies
COPY web/server/package*.json ./
RUN npm install

# Copy the rest of the server code
COPY web/server ./

# Expose port
EXPOSE 3333

# Start the server with nodemon for live-reloading
CMD ["npx", "nodemon", "src/index.ts"]
