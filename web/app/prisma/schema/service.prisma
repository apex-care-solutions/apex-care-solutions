
  model Service {
    name             String            @id
    description      String?
    createdAt        DateTime          @default(now())
    packageServices  PackageService[]
    job              Job[]
    serviceSkills    ServiceSkill[]
  }

model ServiceSkill {
  serviceName String
  skillId   Int

  service Service @relation(fields: [serviceName], references: [name])
  skill   Skill   @relation(fields: [skillId], references: [id])

  @@id([serviceName, skillId])
  @@index([serviceName])
  @@index([skillId])
}
